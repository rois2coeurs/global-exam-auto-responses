{
  "description": "GlobalExam Auto Responses",
  "manifest_version": 2,
  "name": "GlobalExam Auto Responses",
  "version": "1.2",

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "https://exam.global-exam.com/*"
  ],

  "web_accessible_resources": ["assets/public/*"],

  "browser_action": {
    "default_popup": "popup/index.html"
  },

  "icons": {
    "64": "assets/icon.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "@globalexam-auto-responses",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://exam.global-exam.com/*"],
      "js": ["content.js", "toast.js"]
    }
  ]
}
