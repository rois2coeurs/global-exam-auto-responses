{
  "description": "GlobalExam Auto Responses",
  "manifest_version": 2,
  "name": "globalexam-auto-responses",
  "version": "1.0",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://exam.global-exam.com/*"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "@globalexam-auto-responses",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://exam.global-exam.com/*"],
      "js": ["content.js"]
    }
  ]
}
